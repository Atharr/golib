root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{*.go,*.go2}]
indent_style = tab
insert_final_newline = true

[*.md]
indent_size = 2
insert_final_newline = true

[Makefile]
indent_style = tab
